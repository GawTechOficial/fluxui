{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["develop"],
  "rangeStrategy": "bump",
  "labels": ["deps"],
  "timezone": "America/Sao_Paulo",
  "schedule": ["after 9am and before 5pm every weekday"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 3,
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ”„ Dependency Dashboard - FluxUI",
  "separateMinorPatch": true,

  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "prTitle": "{{semanticPrefix}}{{#if isPin}}Pin{{else}}Update{{/if}} {{depName}} to {{newVersion}}",
  "vulnerabilityAlerts": {
    "labels": ["security", "deps"]
  },

  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },

  "packageRules": [
    {
      "description": "Patches updates",
      "matchUpdateTypes": ["patch"],
      "addLabels": ["patch"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Minor updates",
      "matchUpdateTypes": ["minor"],
      "addLabels": ["minor"],
      "minimumReleaseAge": "14 days"
    },
    {
      "description": "Major updates",
      "matchUpdateTypes": ["major"],
      "addLabels": ["major", "breaking-change"],
      "minimumReleaseAge": "21 days",
      "prPriority": 10
    },
    {
      "description": "Monorepo workspace dependencies - desabilitado",
      "enabled": false,
      "matchPackageNames": ["/^@fluxui//"]
    }
  ],

  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Node.js version in package.json engines",
      "managerFilePatterns": ["/^package\\.json$/"],
      "matchStrings": ["\"node\":\\s*\">=(?<currentValue>\\d+)\""],
      "depNameTemplate": "node",
      "datasourceTemplate": "node"
    }
  ]
}
